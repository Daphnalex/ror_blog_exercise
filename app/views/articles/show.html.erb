<header class="masthead" style="background-image: url('<%= @article.image %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%= @article.title %></h1>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-6 buttonStyle">
    </div>
    <div class="col-lg-6 col-md-6 buttonStyle">
      <div class="btn btn-outline-info">
        <%= link_to 'Editer', edit_article_path(@article.id), :class => "btn" %>
      </div>
      <div class="btn btn-outline-dark">
        <%= link_to 'Supprimer', article_path(@article.id), :class => "btn", :method => :delete %>
      </div>
    </div>
  </div>
</div>
<br/>
<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
      <%= @article.content.html_safe %>
    </div>
  </div>
</div>
<br/>
<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
      <h2>Ajouter un commentaire</h2>
      <%= form_for [@article, @comment] do |c| %>
        <%= c.hidden_field :article_id, :value => @article.id %>
        <div class='field'>
          <%= c.label :auteur %>
          <br/>
          <%= c.text_field :author %>
        </div>
        <div class='field'>
          <%= c.label :commentaire %>
          </br>
            <%= c.text_area :content %>
        </div>
        <div class='validateComment'>
          <%= c.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br/>
<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
      <% @comments.each do |comment| %>
        <div class="jumbotron">
          <div class="container">
            <p><%=comment.content%></p>
            <div class="author"><%=comment.author%></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
