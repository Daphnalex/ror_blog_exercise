<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 mx-auto">
      <%= form_for @article do |f| %>
        <div class='field'>
          <%= f.label :titre %>
          <br/>
          <%= f.text_field :title %>
        </div>
        <div class='field'>
          <%= f.label :url_de_ton_image %>
          </br>
            <%= f.text_field :image %>
        </div>
        <div class='field'>
          <%= f.label :résumé %>
          </br>
            <%= f.text_area :resume %>
        </div>
        <div class='field'>
          <%= f.label :contenu %>
          <%= f.cktext_area :content %>
        </div>
        <div class='actions'>
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
